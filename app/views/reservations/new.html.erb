<h1>Book a New Reservation</h1>
  <%= render @restaurant%>

<%= form_for(@reservation) do |f| %>

  <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p>
  <p>
    <%= f.label :restaurant_id %><br />
    <%= f.text_field :restaurant_id %>
  </p>

  <p>
    <%= f.label :date %><br />
    <%= f.date_field :date %>
  </p>

  <p>
    <%= f.label :time %><br />
    <%= f.time_select :time, :ampm => true, :minute_step => 30 %>
  </p>
  <p>
    <%= f.label :number_of_people %><br />
    <%= f.number_field :number_of_people, { min: '1', max: '15'} %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= form_for(@reservation) do |f| %>
